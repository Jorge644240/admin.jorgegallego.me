doctype html

html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="author", content="Jorge Gallego")
		meta(name="title", content=title)
		title #{title}
		link(rel="preconnect", href="https://fonts.googleapis.com")
		link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
		link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;500;600&family=Poppins:wght@400;500;600;700&display=swap")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@latest/font/bootstrap-icons.css")
		link(rel="stylesheet", href="/css/dashboard.css")
		link(rel="stylesheet", href="/css/dashboard/forms/create.css")
	body 
		a.cancel(href="javascript:void(0)") Cancel
		if resourceType === "skill"
			h1 Create Skill
			form(method="POST")
				input#name(type="text", name="name", maxlength="100", placeholder="Skill Name *", required) 
				select#level(name="level") 
					option(value="0") Currently Learning
					option(value="1") Novice
					option(value="2") Experienced
					option(value="3") Advanced
					option(value="4") Expert
				input(type="submit", name="action", value="Create Skill")
		else if resourceType === "experience"
			h1 Create Experience
			form(method="POST")
				input#title(type="text", name="title", maxlength="100", placeholder="Work Title *", required)
				input#company(type="text", name="company", minlength="5", maxlength="100", placeholder="Company Name *", required)
				input#webiste(type="url", name="website", maxlength="100", placeholder="Company Website URL *", required)
				textarea#summary(name="summary", rows="5", minlength="10", maxlength="150", placeholder="Summary *", required)
				label(for="type") Type *
				select#type(name="type", required)
					option(value="Full Time") Full Time
					option(value="Part Time") Part Time
					option(value="Freelance") Freelance
					option(value="Contract") Contract
					option(value="Self Employed") Self Employed
				textarea#description(name="description", rows="10", minlength="50", maxlength="1500", placeholder="Description * (This block allows Markdown syntax)", required)
				label(for="startDate") Start Date *
				input#startDate(type="date", name="startDate", max=new Date().toLocaleDateString("en"), required)
				label(for="endDate") End Date
				input#endDate(type="date", name="endDate")
				input(type="submit", name="action", value="Create Experience")
		else if resourceType === "project"
			h1 Create Project 
			form(method="POST", enctype="multipart/form-data")
				input#name(type="text", name="name", minlength="5", maxlength="100", placeholder="Project Name *", required)
				input#url(type="url", name="url", placeholder="Project URL *", required)
				textarea#description(name="description", rows="10", minlength="50", maxlength="500", placeholder="Project Description * (This block supports Markdown)")
				label(for="image") Project Image *
				input#image(type="file", name="image", accept="image/png, image/jpeg", required)
				label(for="featured") Featured Project? 
					span No
				input#featured(type="checkbox", name="featured")
				input(type="submit", name="action", value="Create Project")
			script(src="/js/dashboard/forms/projects.js") 
		else if resourceType === "course"
			h1 Create Course
			form(method="POST")
				input#name(type="text", name="name", minlength="5", maxlength="100", placeholder="Course Name *", required)
				input#school(type="text", name="school", maxlength="250", placeholder="Course School *", required)
				input#url(type="url", name="url", maxlength="100", placeholder="Course URL *", required)
				input#year(type="number", name="year", min="2020", max=new Date().getFullYear(), placeholder="Course Completion Year *", required)
				label(for="topic") Course Topic *
				select#topic(name="topic") 
					option(value="Computer Science") Computer Science
					option(value="Web Development") Web Development
					option(value="Software Development") Software Development
					option(value="App Development") App Development
					option(value="Artificial Intelligence") AI/ML
					option(value="Cybersecurity") Cybersecurity
				input(type="submit", name="action", value="Create Course")
		script(src="/js/dashboard/forms/create.js") 